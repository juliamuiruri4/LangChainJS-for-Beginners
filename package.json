{
  "name": "langchainjs-for-beginners",
  "version": "1.0.0",
  "description": "A beginner-friendly course for learning LangChain.js - Build AI-powered applications with JavaScript and TypeScript",
  "type": "module",
  "scripts": {
    "dev": "tsx watch",
    "start": "tsx",
    "build": "tsx scripts/build-check.ts",
    "validate": "tsx scripts/validate-examples.ts",
    "validate:parallel": "tsx scripts/validate-examples-parallel.ts",
    "test": "npm run validate",
    "test:parallel": "npm run validate:parallel",
    "format": "prettier --write \"**/*.{ts,js,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,js,json,md}\""
  },
  "keywords": [
    "langchain",
    "langchainjs",
    "ai",
    "llm",
    "tutorial",
    "course",
    "beginners",
    "typescript",
    "javascript"
  ],
  "author": "Dan Wahlin",
  "license": "MIT",
  "engines": {
    "node": ">=22.0.0"
  },
  "dependencies": {
    "@langchain/anthropic": "^1.0.0",
    "@langchain/classic": "^1.0.0",
    "@langchain/core": "^1.0.1",
    "@langchain/mcp-adapters": "^1.0.0",
    "@langchain/openai": "^1.0.0",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "langchain": "^1.0.1",
    "mathjs": "^15.0.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/node": "^24.8.1",
    "prettier": "^3.6.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  }
}
